<h1>Edit Post</h1>
<form action="/articles/<%= @article.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <h1><%= @article.title %></h1>
    <p><%=@article.content %></p>
    <p>Title: <input id="title" type="text" name="edit_article[title]"></p>
    <p>Content: <input id="content" type="text" name="edit_article[content]"></p>
    <input type="submit" value="submit">
</form>
    <input type="text" name="article[title]" id='title'>

    <label>Content: </label>
    <textarea id = "content"
        rows = "3"
        cols = "80"
        name= "article[content]">Your text here</textarea>

    <input type="submit" value="SUBMIT" />

</form> 
 